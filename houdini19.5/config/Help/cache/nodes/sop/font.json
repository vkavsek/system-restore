type": "parameters_item_group", "body": [{"type": "parameters_item", "indent": 0, "text": ["Primitive Type"], "extent": [393, 410], "body": [{"type": "para", "indent": 4, "text": ["Type of geometry to create."], "extent": [410, 443]}], "container": true, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Font"], "extent": [443, 449], "body": [{"type": "para", "indent": 4, "text": ["The font to use for drawing the text."], "extent": [449, 493]}, {"type": "para", "indent": 4, "text": ["By default the menu lists all known system fonts. You can browse for a\n    specific font file, if it is not listed. "], "extent": [493, 615]}], "container": true, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Text"], "extent": [615, 621], "body": [{"type": "para", "indent": 4, "text": ["Text to be generated."], "extent": [621, 652]}], "container": true, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Horizontal Alignment"], "extent": [652, 674], "body": [{"type": "para", "indent": 4, "text": ["Specifies how the text is aligned horizontally around the origin."], "extent": [695, 766]}], "container": true, "attrs": {"id": "halign"}, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Vertical Alignment"], "extent": [766, 786], "body": [{"type": "para", "indent": 4, "text": ["Specifies how the text is aligned vertically around the origin."], "extent": [807, 880]}], "container": true, "attrs": {"id": "valign"}, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["First Line"], "extent": [880, 892], "body": [{"type": "para", "indent": 4, "text": ["The origin is the baseline of the first line of text."], "extent": [892, 951]}], "container": true, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Top"], "extent": [951, 956], "body": [{"type": "para", "indent": 4, "text": ["The origin is the top of the first line of text."], "extent": [956, 1014]}], "container": true, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Middle"], "extent": [1014, 1022], "body": [{"type": "para", "indent": 4, "text": ["The origin is the half way between the top of the first line and the baseline of the last line."], "extent": [1022, 1127]}], "container": true, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Bottom"], "extent": [1127, 1135], "body": [{"type": "para", "indent": 4, "text": ["The origin is the baseline of the last line."], "extent": [1135, 1189]}], "container": true, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Include Descender in Vertical Alignment"], "extent": [1189, 1230], "body": [{"type": "para", "indent": 4, "text": ["If enabled, then the alignment baseline is set to the descender of the font, rather than the font\u2019s baseline.\n    A descender is the portion of a letter that extends below the baseline of the font - for example the stem of\n    a lower case letter ", {"type": "code", "text": ["p"]}, "."], "extent": [1258, 1515]}], "container": true, "attrs": {"id": "use_descender"}, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Origin"], "extent": [1515, 1523], "body": [{"type": "para", "indent": 4, "text": ["Sets the text\u2019s origin along the XYZ axes."], "extent": [1544, 1592]}], "container": true, "attrs": {"id": "tx /ty /tz"}, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Rotate"], "extent": [1592, 1600], "body": [{"type": "para", "indent": 4, "text": ["#id rx /ry /rz"], "extent": [1600, 1620]}, {"type": "para", "indent": 4, "text": ["Rotates the text about its origin."], "extent": [1620, 1660]}], "container": true, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Scale XY"], "extent": [1660, 1670], "body": [{"type": "para", "indent": 4, "text": ["Scale factors along x and y axes."], "extent": [1687, 1726]}], "container": true, "attrs": {"id": "sx /sy"}, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Font Size"], "extent": [1726, 1737], "body": [{"type": "para", "indent": 4, "text": ["Single control for controlling the size. The scale is applied on top\n    of this."], "extent": [1756, 1843]}], "container": true, "attrs": {"id": "fontsize"}, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Tracking XY"], "extent": [1843, 1856], "body": [{"type": "para", "indent": 4, "text": ["Tracking in x-direction. Leading in y-direction. "], "extent": [1887, 1942]}], "container": true, "attrs": {"id": "trackingx /trackingy"}, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Oblique Angle"], "extent": [1942, 1957], "body": [{"type": "para", "indent": 4, "text": ["Amount of slant to apply to the text, in degrees."], "extent": [1975, 2030]}], "container": true, "attrs": {"id": "oblique"}, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Level of Detail"], "extent": [2030, 2047], "body": [{"type": "para", "indent": 4, "text": ["Controls the number of points in polygonal fonts."], "extent": [2061, 2116]}], "container": true, "attrs": {"id": "lod"}, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Automatic Kerning"], "extent": [2116, 2135], "body": [{"type": "para", "indent": 4, "text": ["Automatically apply kerning pairs from the font to adjust spacing between letters for a more\n    visually pleasing results."], "extent": [2135, 2264]}], "container": true, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Hole Faces"], "extent": [2264, 2276], "body": [{"type": "para", "indent": 4, "text": ["Generates holes in polygons and Bezier faces."], "extent": [2276, 2327]}], "container": true, "role": "item"}, {"type": "parameters_item", "indent": 0, "text": ["Add Attributes"], "extent": [2327, 2343], "body": [{"type": "para", "indent": 4, "text": ["Create ", {"type": "code", "text": ["textsymbol"]}, " and ", {"type": "code", "text": ["textindex"]}, " primitive attributes.  ", {"type": "code", 